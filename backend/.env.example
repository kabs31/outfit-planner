# ==================== APP CONFIGURATION ====================
DEBUG=True
APP_NAME="AI Outfit Recommender"
APP_VERSION="1.0.0"

# ==================== DATABASE ====================
# Supabase PostgreSQL connection string
# Get from: https://supabase.com → Your Project → Settings → Database
DATABASE_URL=postgresql://postgres:your_password@db.xxx.supabase.co:5432/postgres

# ==================== OLLAMA / LLAMA ====================
# Local Ollama server
OLLAMA_HOST=http://localhost:11434
# Use 4-bit quantized model for 8GB GPU
OLLAMA_MODEL=llama3.1:8b-q4_0

# ==================== RUNPOD (GPU FOR VIRTUAL TRY-ON) ====================
# Get from: https://runpod.io → Serverless → Your Endpoint
RUNPOD_API_KEY=your_runpod_api_key_here
RUNPOD_ENDPOINT_ID=your_endpoint_id_here

# ==================== CLOUDINARY (IMAGE STORAGE) ====================
# Get from: https://cloudinary.com → Dashboard
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ==================== PRODUCT APIS ====================
FAKE_STORE_API=https://fakestoreapi.com
# Add more APIs as you integrate them

# ==================== MODEL IMAGE ====================
# Base model image for virtual try-on
# Use your own or this default
MODEL_IMAGE_URL=https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=512&h=768&fit=crop

# ==================== OPTIONAL ====================
# Redis for caching (optional)
REDIS_URL=redis://localhost:6379

# Secret key for JWT (change in production)
SECRET_KEY=your-secret-key-change-this-in-production

# CORS origins (comma-separated for production)
# CORS_ORIGINS=https://your-app.vercel.app,https://your-domain.com
